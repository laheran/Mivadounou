<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menu_icon_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/ic_restaurant_menu_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commande_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Riz au Gras Le blank du"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/commande_menu_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Akif | prix : 290 FCFA"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="@dimen/TextInputLayout_width_medium"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="QuantitÃ©">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/commande_menu_qte"
                    android:layout_width="@dimen/TextInputLayout_width_medium"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commande_menu_end_at_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="July 30, 2017"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/commande_menu_end_at_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:33"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/commande_menu_choose_date"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_calendar" />

                <ImageView
                    android:id="@+id/commande_menu_choose_Time"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_stopwatch" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/commande_menu_cancel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/backin"
                android:text="Annuler"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/commande_menu_send"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/backin"
                android:text="Envoyer"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>